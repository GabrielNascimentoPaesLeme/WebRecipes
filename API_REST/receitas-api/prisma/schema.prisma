generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Recipe {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  title String
  description String
  ingredients Json
  preparation Json
  favorites    Favorite[] @relation("RecipeFavorites")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  username  String @unique
  password  String
  email     String @unique
  favorites Favorite[] @relation("UserFavorites")
}

model Favorite {
  id        String      @id @default(auto()) @map("_id") @db.ObjectId
  userId    String
  recipeId  String
  user      User     @relation("UserFavorites", fields: [userId], references: [id])
  recipe    Recipe   @relation("RecipeFavorites", fields: [recipeId], references: [id])
  

  @@unique([userId, recipeId]) // Garante que cada usu√°rio pode favoritar uma receita apenas uma vez
}
